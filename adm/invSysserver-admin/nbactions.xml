<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>run</actionName>
            <packagings>
                <packaging>war</packaging>
                <packaging>ear</packaging>
                <packaging>ejb</packaging>
            </packagings>
            <goals>
                <goal>org.springframework.boot:spring-boot-maven-plugin:1.3.2.RELEASE:run</goal>
            </goals>
            <properties>
                <run.jvmArguments>-Xms128m -Xmx512m -Dspring.profiles.active=local</run.jvmArguments>
                
            </properties>
        </action>
        <action>
            <actionName>debug</actionName>
            <packagings>
                <packaging>war</packaging>
                <packaging>ear</packaging>
                <packaging>ejb</packaging>
            </packagings>
            <goals>
                <goal>spring-boot:run</goal>
            </goals>
            <properties>
                <run.jvmArguments>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address} -Dspring.profiles.active=local</run.jvmArguments>
                <jpda.listen>true</jpda.listen>
            </properties>
        </action>
        <action>
            <actionName>test.single</actionName>
            <packagings>
                <packaging>*</packaging>
            </packagings>
            <goals>
                <goal>test-compile</goal>
                <goal>surefire:test</goal>
            </goals>
            <properties>
                <test>${packageClassName}</test>
                <spring.profiles.active>local</spring.profiles.active>
            </properties>
        </action>
        <action>
            <actionName>test</actionName>
            <packagings>
                <packaging>*</packaging>
            </packagings>
            <goals>
                <goal>test</goal>
            </goals>
            <properties>
                <spring.profiles.active>local</spring.profiles.active>
            </properties>
        </action>
    </actions>
